}
.video-detail .article-header {
  padding: 32rpx 30rpx;
}
.video-detail .article-header .title {
  font-size: 48rpx;
  line-height: 34rpx;
  color: #222222;
}
.video-detail .article-header .article-author {
  margin-top: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.video-detail .article-header .article-author .header-left {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.video-detail .article-header .article-author .header-left image {
  width: 46rpx;
  height: 46rpx;
  border-radius: 50%;
  display: inline-block;
}
.video-detail .article-header .article-author .header-left text {
  margin-left: 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 26rpx;
  font-weight: 500;
}
.video-detail .article-header .article-author .header-right {
  font-size: 26rpx;
  color: #999;
}
.video-detail .video-wrapper {
  margin-top: 40rpx;
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  height: 400rpx;
}
.video-detail .video-wrapper .video {
  width: 100%;
  height: 100%;
}
.video-detail .s-header {
  padding: 20rpx 30rpx;
  font-size: 30rpx;
  color: #303133;
  background: #fff;
  margin-top: 26rpx;
}
.video-detail .s-header:before {
  content: '';
  width: 0;
  height: 40rpx;
  margin-right: 24rpx;
  border-left: 6rpx solid #ec706b;
}
.video-detail .rec-section {
  background-color: #fff;
}
.video-detail .rec-section .rec-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 20rpx 30rpx;
  position: relative;
}
.video-detail .rec-section .rec-item:after {
  content: '';
  position: absolute;
  left: 30rpx;
  right: 0;
  bottom: 0;
  height: 0;
  border-bottom: 1px solid #eee;
  -webkit-transform: scaleY(50%);
          transform: scaleY(50%);
}
.video-detail .rec-section .left {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  padding-right: 10rpx;
  overflow: hidden;
  position: relative;
}
.video-detail .rec-section .left .title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 32rpx;
  color: #303133;
  line-height: 44rpx;
}
.video-detail .rec-section .left .bot {
  position: absolute;
  left: 0;
  bottom: 4rpx;
  font-size: 26rpx;
  color: #909399;
}
.video-detail .rec-section .left .time {
  margin-left: 20rpx;
}
.video-detail .rec-section .right {
