<scroll-view class="video-detail" scroll-y="{{true}}"><block wx:if="{{detailInfo}}"><view class="article-header"><view class="title">{{detailInfo.title}}</view><view class="article-author"><block wx:if="{{detailInfo.media_user}}"><view class="header-left"><image src="{{detailInfo.media_user.avatar_url}}"></image><text>{{detailInfo.media_user.screen_name}}</text></view></block><view class="header-right"><block wx:if="{{detailInfo.publish_time}}"><text>{{$root.m0+''}}</text></block><block wx:if="{{detailInfo.comment_count}}"><text>{{detailInfo.comment_count+"评论"}}</text></block></view></view></view></block><view class="video-wrapper"><video class="video" src="{{detailInfo.video_play_url}}" poster="{{detailInfo.poster_url}}" controls="{{true}}" objectFit="fill" autoplay="{{false}}"></video></view><view class="content"><view class="s-header"><text class="tit">相关推荐</text></view><block wx:for="{{detailInfo.newsList}}" wx:for-item="item" wx:for-index="__i0__" wx:key="id"><view class="rec-section"><view class="rec-item"><view class="left"><text class="title">{{item.title}}</text><view class="bot"><text class="author">{{item.author}}</text><text class="time">{{item.time}}</text></view></view><view class="right"><image class="img" src="{{item.images[0]}}" mode="aspectFill"></image><view class="video-tip"><view class="icon iconfont"></view></view></view></view></view></block></view><view style="{{'height:'+(footerbottom)+';'}}"></view></scroll-view>