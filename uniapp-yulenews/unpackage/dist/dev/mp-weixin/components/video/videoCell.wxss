.video-cell {
  margin: 0px 30rpx;
  border-bottom: 1px solid rgba(221, 221, 221, 0.6);
}
.video-cell .item-detail {
  padding: 32rpx 0px;
  box-sizing: border-box;
}
.video-cell .item-detail .item-img-holder {
  position: relative;
  width: 100%;
  height: 400rpx;
}
.video-cell .item-detail .item-img-holder .video-mask {
  position: absolute;
  margin: 10rpx 20rpx;
  z-index: 9;
  top: 0;
  color: #fff;
  font-size: 28rpx;
  line-height: 42rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.video-cell .item-detail .item-img-holder .large-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.video-cell .item-detail .item-img-holder .play-btn {
  position: absolute;
  z-index: 10;
  top: 45%;
  left: 45%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.video-cell .item-detail .item-img-holder .play-btn .icon {
  color: #fff;
  font-size: 100rpx;
}
.video-cell .item-detail .item-info {
  margin-top: 12rpx;
  color: #999;
  overflow: hidden;
  font-size: 22rpx;
}
.video-cell .item-detail .item-info .space {
  margin-right: 10rpx;
}

